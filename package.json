{
  "name": "apstat-park-testing",
  "version": "1.0.0",
  "description": "APStat Park - Interactive Statistics Learning Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "type-check": "tsc -b --verbose --force",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,css,md,json}\" --write",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/dist"
  },
  "keywords": [
    "education",
    "statistics",
    "ap",
    "learning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fake-indexeddb": "^4.0.2",
    "happy-dom": "^12.0.0",
    "prettier": "^3.0.0",
    "vite": "^6.3.5",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
