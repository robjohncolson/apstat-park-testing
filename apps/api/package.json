{
  "name": "@apstat-park/api",
  "version": "1.0.0",
  "description": "API server for APStat Park student progress tracking",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:js": "nodemon src/index.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "npm run build && npm start",
    "lint": "eslint --config ../../.eslintrc.json src --ext .ts",
    "type-check": "tsc --noEmit",
    "migrate:create": "ts-node src/migrations/cli.ts create",
    "migrate:run": "ts-node src/migrations/cli.ts run",
    "migrate:rollback": "ts-node src/migrations/cli.ts rollback",
    "migrate:status": "ts-node src/migrations/cli.ts status",
    "migrate:reset": "ts-node src/migrations/cli.ts reset"
  },
  "keywords": [
    "education",
    "api",
    "postgres",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "apstat-park-testing": "file:../..",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "pg": "^8.16.0",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.19.0",
    "@types/pg": "^8.10.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.0",
    "typescript": "^5.8.3"
  }
}
