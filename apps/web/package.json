{
  "name": "@apstat-park/web",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "React frontend for APStat Park education platform",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b ../../packages/chain-core/tsconfig.build.json ../../packages/chain-p2p/tsconfig.build.json && tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "preview": "vite preview",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "apstat-park-testing": "file:../..",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^6.30.1",
    "socket.io-client": "^4.8.1",
    "react-markdown": "^9.0.5",
    "react-modal": "^3.16.1",
    "@tanstack/react-query": "^5.59.0",
    "@apstatchain/core": "file:../../packages/chain-core",
    "@apstatchain/p2p": "file:../../packages/chain-p2p",
    "typescript": "~5.8.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "msw": "^2.10.2",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.0.0",
    "vitest": "^2.1.9",
    "@types/react-modal": "^3.13.1"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
